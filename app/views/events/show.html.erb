<p style="color: green"><%= notice %></p>

<%= render @event %>

<div>
  <p><%= link_to "Back to events", events_path %></p>
  <% if user_signed_in? %>
    <p><%= link_to "Edit this event", edit_event_path(@event) %> |</p>
    <p><%= button_to "Destroy this event", @event, method: :delete %></p>
  <% end %>
</div>
