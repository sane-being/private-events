<h1>My Profile</h1>
<p>Email: <%= current_user.email %></p>
<p><%= link_to "Edit Profile", edit_user_registration_path %></p>

<p style="color: green"><%= notice %></p>

<p><%= link_to "Create new event", new_event_path %></p>

<div id="events">
  <h2>List of events created by you:</h2>
  <% @created_events.each do |event| %>
    <p>
      <%= render event %>
      <%= link_to "Show this event", event %>
    </p>
  <% end %>
</div>

<div id="events">
  <h2>List of events you are attending:</h2>
  <% @attendances.each do |attendance| %>
    <p>
      <%= render attendance.attended_event %>
      <%= link_to "Show this event", attendance.attended_event %>
    </p>
  <% end %>
</div>